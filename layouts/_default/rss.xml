{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML -}}
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title | html }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | default "Najnowsze my≈õli jakubowe" | html }}</description>
    <language>{{ .Site.Language.Lang | default "pl" }}</language>
    <lastBuildDate>{{ now.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</lastBuildDate>

    {{- range first 20 (where .Site.RegularPages "Section" "posts") }}
    <item>
      <title>{{ .Title | html }}</title>
      <link>{{ .Permalink }}</link>
      <guid>{{ .Permalink }}</guid>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      <description>{{ .Content | html }}</description>
    </item>
    {{- end }}
  </channel>
</rss>
